
<h1>Lista de Productos</h1>

<div class="container">
    {{#each products}}
        <div>
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <p>Precio: ${{this.price}}</p>
            <p>Categoría: {{this.category}}</p>
            <hr>
        </div>
    {{/each}}
</div>

<!-- Controles de paginación -->
<div>
    {{#if hasPrevPage}}
        <a href="/home?page={{prevPage}}&limit=10">Anterior</a>
    {{/if}}

    <span>Página {{page}} de {{totalPages}}</span>

    {{#if hasNextPage}}
        <a href="/home?page={{nextPage}}&limit=10">Siguiente</a>
    {{/if}}
</div>


